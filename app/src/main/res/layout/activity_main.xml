<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.caikaiyang.newselectordemo.MainActivity">


    <HorizontalScrollView
        android:layout_centerInParent="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <com.example.caikaiyang.newselectordemo.myview.NewSelecterView
            android:id="@+id/newselecterview"
            app:text_color="#000"
            app:text_color_select="#ff6600"
            app:text_padding_left="10dp"
            app:text_padding_right="10dp"
            app:text_size="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </HorizontalScrollView>
</RelativeLayout>